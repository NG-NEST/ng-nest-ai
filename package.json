{
  "name": "my-ai",
  "version": "0.0.0",
  "main": "dist/electron/main.js",
  "scripts": {
    "ng": "ng",
    "compile:electron": "tsc -p tsconfig.electron.json",
    "start:ng": "ng serve --port 4200 --host 0.0.0.0",
    "start:electron-runner": "wait-on tcp:4200 && cross-env NODE_ENV=development electron .",
    "start": "npm run compile:electron && concurrently \"npm run start:ng\" \"npm run start:electron-runner\"",
    "build": "ng build --base-href ./",
    "build:electron-ts": "tsc -p tsconfig.electron.json",
    "build:all": "npm run build -- --base-href ./ && npm run build:electron-ts",
    "start:prod": "npm run build:all && electron ."
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.0.0",
    "@angular/compiler": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/forms": "^20.0.0",
    "@angular/platform-browser": "^20.0.0",
    "@angular/router": "^20.0.0",
    "@ng-nest/ui": "^20.2.2",
    "dexie": "^4.2.1",
    "micromark": "^4.0.2",
    "openai": "^6.7.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.0.0",
    "@angular/cli": "^20.0.0",
    "@angular/compiler-cli": "^20.0.0",
    "@types/electron": "^1.4.38",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^24.9.2",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.4.0",
    "electron-builder": "^26.0.12",
    "jasmine-core": "~5.7.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "prettier": "^3.6.2",
    "reflect-metadata": "^0.2.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.2",
    "wait-on": "^9.0.1"
  }
}
